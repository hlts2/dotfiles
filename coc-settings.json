{
  "coc": {
    "preferences": {
      "formatOnType": true,
      "formatOnSaveFileTypes": [
          "css", "markdown"
      ]
    }
  },
  "signature": {
    "preferShownAbove": false,
    "target": "float"
  },
  "session.directory": "~/.cache/vim/sessions",
  "diagnostic": {
    "messageTarget": "echo",
    "refreshOnInsertMode": true
  },
  "suggest": {
    "detailField": "abbr",
    "echodocSupport": true,
    "enablePreselect": false,
    "enablePreview": true,
    "floatEnable": true,
    "keepCompleteopt": false,
    "noselect": true,
    "preferCompleteThanJumpPlaceholder": true,
    "removeDuplicateItems": true,
    "snippetIndicator": "",
    "triggerAfterInsertEnter": true
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        }
      }
    }
  },
  "zig.enabled": true,
  "zig.startUpMessage": true,
  "zig.path": "zls",
  "zig.debugLog": false
  // "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer"
}
