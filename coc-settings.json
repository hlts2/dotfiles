{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [
        "--format-style",
        "goimports",
        "--cache-style",
        "on-demand",
        "-mode",
        "stdio",
        "--diagnostics-style=instant"
      ],
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}
